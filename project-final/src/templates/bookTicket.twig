{% extends "base.twig" %}

{% block content %}
<div class="container">
  <form class="form-signin" action="/login" method="post">
    <h2 class="form-signin-heading">Book your trip here!</h2>
    
    <div class="col-xs-2">
        <form class="form-inline" id="search-form" action="" method="get">
        <datalist id="browsers">
          {% set airports = [] %}
          {% for flight in flights %}
            {% if flight.departure not in airports %}
              {% set airports = airports|merge([flight.departure]) %}
              <option value={{flight.departure}}>
            {% endif %}
            {% if flight.arrival not in airports %}
              {% set airports = airports|merge([flight.arrival]) %}
              <option value={{flight.arrival}}>
            {% endif %}
          {% endfor %}
        </datalist>
          <label><h4>From: </h4></label>
          <input class="form-control" id="from" type="text" list="browsers" name="from" placeholder="YVR" required>
            
          <label><h4>To: </h4></label>
          <input class="form-control" id="to" type="text" list="browsers" name="to" placeholder="YYJ" required>
        </form>
    </div>

    <div class="col-xs-2">
        <input class="form-control" id="passengers" type="text" placeholder="PASSENGERS" required>
        <input class="form-control" id="depart" type="text" placeholder="DEPART" required>
        <input class="form-control" id="return" type="text" placeholder="RETURN" required>
    </div>

    <button class="btn" type="submit" id="bookingButton">Book!</button> <!-- This doesn't lead anywhere meaningful yet-->
    
  </form>
</div>
{% endblock %}