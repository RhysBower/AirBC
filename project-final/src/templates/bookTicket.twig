{% extends "base.twig" %}

{% block content %}
<link rel="stylesheet" href="css/custom.css">
<div class="container">
  <form class="form-signin" action="/login" method="post">
    <h2 class="form-signin-heading">Book your trip here!</h2>
    
    <div class="col-xs-2" id="from">
        <label><h4>From: </h4></label>
        <input class="form-control" type="text" placeholder="YVR" required>
        <select id="departure">
            {% for airport in airports %}
                <option value="{{ airport.name }}">{{ airport.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="col-xs-2" id="toForm">
        <label><h4>To: </h4></label>
        <input class="form-control" type="text" placeholder="YYJ" required>
        <select id="arrival">
            {% for airport in airports %}
                <option value="{{ airport.name }}">{{ airport.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="col-xs-2">
        <input class="form-control" id="passengers" type="text" placeholder="PASSENGERS" required>
        <input class="form-control" id="depart" type="text" placeholder="DEPART" required>
        <input class="form-control" id="return" type="text" placeholder="RETURN" required>
    </div>

    <button class="btn" type="submit" id="bookingButton">Book!</button> <!-- This doesn't lead anywhere meaningful yet-->
    
  </form>
</div>
{% endblock %}