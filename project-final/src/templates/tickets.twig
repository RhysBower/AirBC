{% extends "base.twig" %}

{% block content %}
<div class="container">
  <h2>Tickets:
    {% if currentUser is null %}
      <button class="btn" type="submit" style="float: right" disabled>Book Tickets</button>
    {% else %}
      <a class="btn" type="submit" style="float: right" href="/bookTicket"">Book Tickets</a>
    {% endif %}
  </h2>

  {% if tickets|length == 0 %}
      <div class="well">No tickets were found.</div>
  {% else %}
  <table class="table table-hover">
    <thead>
      <tr>
        <td>ID</td>
        <td>Seat Type</td>
        <td>Flight</td>
        <td>Customer ID</td>
      </tr>
    </thead>
    <tbody>
      {% for ticket in tickets %}
         <tr>
          <td>{{ticket.id}}</td>
          <td>{{ticket.seat_type}}</td>
          <td>{{ticket.flightId}}</td>
          <td>{{ticket.customerId}}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% endif %}
</div>
{% endblock %}
