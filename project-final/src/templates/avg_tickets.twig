{% extends "base.twig" %}

{% block content %}
<div class="container">
  <h2>{{aggregation}} tickets sales per flight group by route</h2>
  <a href="/staff/tickets/avg" class="btn">Average</a>
  <a href="/staff/tickets/max" class="btn">Max</a>
  <a href="/staff/tickets/min" class="btn">Min</a>
  <a href="/staff/tickets/sum" class="btn">Sum</a>
  {% if avgTickets|length == 0 %}
      <div class="well">No routes were found.</div>
  {% else %}
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Arrival</td>
        <td>Departure</td>
        <td>{{aggregation}} Tickets Sold Per Flight</td>
      </tr>
    </thead>
    <tbody>
      {% for row in avgTickets %}
         <tr>
          <td>{{row.arrival}}</td>
          <td>{{row.departure}}</td>
          <td>{{row.avgTicketsSold}}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% endif %}
</div>
{% endblock %}
